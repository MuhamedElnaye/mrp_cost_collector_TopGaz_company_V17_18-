<odoo>
    <record id="view_mrp_cost_collector11_list" model="ir.ui.view">
        <field name="name">Cost Collector list</field>
        <field name="model">mrp.cost.collector</field>
        <field name="arch" type="xml">
            <list>
                <field name="ref"/>
                <field name="finished_product_ids" optional='True'/>
                <field name="global_qty" string="Required Quantity"/>
                <!-- <field name="location_id"/>-->
                <field name="location_ids"/>
                <field name="total_cost_all"/>
                <field name="date_time"/>
                <field name="component_line_ids" optional='True'>
                    <list>
                        <field name="required_qty"/>
                        <field name="available_qty"/>
                        <field name="missing_qty"/>
                    </list>
                </field>
            </list>
        </field>
    </record>
    <record id="view_mrp_cost_collector_form" model="ir.ui.view">
        <field name="name">mrp cost collector form</field>
        <field name="model">mrp.cost.collector</field>
        <field name="arch" type="xml">
            <form string="Planning Cost">
                <sheet>
                    <header class="d-flex flex-column">
                        <div class="oe_button_box  w-100">
                            <div class="d-flex align-items-center  justify-content-between  w-100">
                                <div>
                                    <span class="oe_title">
                                        <h1 class="mb-0">
                                            <field name="ref"/>
                                        </h1>
                                    </span>
                                </div>
                                <div>
                                    <button name="compute_components" type="object" class="btn-primary"
                                            string="تحديث المكونات"
                                            icon="fa-rotate-right"/>
                                    <button name="open_export_wizard" type="object"
                                            string="Export to Excel" class="btn-success ms-2"
                                            icon="fa-filter"/>
                                </div>
                            </div>
                        </div>
                    </header>
                    <group>
                        <group>
                            <field name="finished_product_ids" widget="many2many_tags"/>
                            <field name="global_qty"/>
                            <field name="location_ids" widget="many2many_tags"/>

                        </group>
                        <group class="align-items-end">
                            <field name="total_cost_all_with_currency" readonly="1"
                                   style="font-size:30px; font-weight:bold; color:#a3193c;"/>
                            <field name="date_time"/>
                        </group>
                    </group>
                    <separator string="Component Requirements"/>
                    <field name="component_line_ids">
                        <list>
                            <field name="product_id"/>
                            <field name="required_qty"/>
                            <field name="purchase_cost_with_currency" readonly="1"/>
                            <field name="total_cost_with_currency" readonly="1"/>
                            <field name="available_qty"/>
                            <field name="missing_qty"/>
                        </list>
                    </field>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="action_mrp_cost_collector" model="ir.actions.act_window">
        <field name="name">Planning collector Costs</field>
        <field name="res_model">mrp.cost.collector</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_mrp_cost_collector"
              name="Planning collector Costs"
              parent="purchase.menu_purchase_products"
              action="action_mrp_cost_collector"
              sequence="0"
    />
</odoo>
